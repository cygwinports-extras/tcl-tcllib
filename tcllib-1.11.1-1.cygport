DESCRIPTION=
HOMEPAGE="http://tcllib.sourceforge.net/"
SRC_URI="mirror://sourceforge/tcllib/${P}.tar.bz2"

src_compile() { :; }

src_install() {
	cd ${S}
	tclsh installer.tcl \
		-no-wait -no-gui -no-html -nroff -no-examples -pkgs \
		-app-path ${D}/usr/bin \
		-pkg-path ${D}/usr/lib/${PN}${PV} \
		-nroff-path ${D}/usr/share/man/mann \
		|| error "install.tcl failed"
}
